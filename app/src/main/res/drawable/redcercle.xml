<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle in back

    android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:left="2dp"-->


    <item
        >

        <shape android:shape="oval">
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />

            <solid android:color="#fc3d39"/>
            <stroke android:color="#fc3d39"
                android:width="15dp"/>
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>
    <!-- Smaller red circle in front -->

    <item
        >
        <shape android:shape="oval">
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="#ea4335"
                android:width="2dp"/>
            <solid android:color="#ea4335"/>
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>
    <item

        >
        <shape android:shape="oval">
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="#ff4c4c"
                android:width="6dp"/>
            <solid android:color="#ff4c4c"/>
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>
    <item

        >
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="#fc636b"
                android:width="0dp"/>
            <solid android:color="#fc636b"/>
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />
            <size
                android:width="90dp"
                android:height="90dp">

            </size>
        </shape>
    </item>
</layer-list>